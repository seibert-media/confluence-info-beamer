
{
    "name": "Confluence",
    "permissions": {
        "network": "Needs to fetch confluence news feed"
    },
    "optional": [
        ".gitignore"
    ],
    "options": [{
        "title": "URL (without trailing slash)",
        "ui_width": 12,
        "name": "base_url",
        "type": "string",
        "default": "https://demonstration.linchpin-intranet.com"
    }, {
        "title": "Username",
        "ui_width": 4,
        "name": "username",
        "type": "string",
        "default": "tschroeder"
    }, {
        "title": "Password",
        "ui_width": 4,
        "name": "password",
        "type": "string",
        "default": "tschroeder"
    }, {
        "title": "Feed",
        "ui_width": 4,
        "name": "feed",
        "type": "select",
        "options": [
            ["personal", "Personal News Feed"],
            ["corporate", "Corporate News Feed"]
        ],
        "default": "corporate"
    }, {
        "title": "Query",
        "ui_width": 12,
        "name": "additional_query",
        "type": "string",
        "default": "",
        "hint": "Additional query parameters (JSON, parameter 'config' iin request)"
    }, {
        "title": "Items",
        "ui_width": 4,
        "name": "item_count",
        "type": "integer",
        "default": 10,
        "hint": "Number of Items to display"
    }, {
        "title": "Background",
        "ui_width": 2,
        "name": "background",
        "type": "color",
        "default": [0,0,0,0]
    }, {
        "title": "Font",
        "ui_width": 6,
        "name": "font",
        "type": "font",
        "default": "silkscreen.ttf"
    }]
}
