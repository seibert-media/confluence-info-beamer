{
    "name": "Linchpin",
    "permissions": {
        "network": "Needs to fetch linchpin news feed"
    },
    "optional": [
        ".gitignore",
        "COPYRIGHT",
        "example.png",
        "README.md"
    ],
    "options": [
        {
            "type": "section",
            "title": "Your Linchpin Instance"
        },
        {
            "title": "URL (without trailing slash)",
            "ui_width": 12,
            "name": "base_url",
            "type": "string",
            "default": "https://demonstration.linchpin-intranet.com"
        },
        {
            "title": "Username",
            "ui_width": 4,
            "name": "username",
            "type": "string",
            "default": "tschroeder"
        },
        {
            "title": "Password",
            "ui_width": 4,
            "name": "password",
            "type": "string",
            "default": "tschroeder"
        },
        {
            "title": "Insecure SSL",
            "ui_width": 4,
            "name": "ssl_no_verify",
            "type": "boolean",
            "default": false,
            "hint": "Do not verify SSL certificates when doing requests"
        },
        {
            "type": "section",
            "title": "Feed to display"
        },
        {
            "title": "Feed",
            "ui_width": 5,
            "name": "feed",
            "type": "select",
            "options": [
                ["personal", "Personal News Feed"],
                ["corporate", "Corporate News Feed"]
            ],
            "default": "corporate"
        },
        {
            "title": "Items",
            "ui_width": 4,
            "name": "item_count",
            "type": "integer",
            "default": 10,
            "hint": "Number of Items to display"
        },
        {
            "title": "Show excerpt",
            "ui_width": 3,
            "name": "show_excerpt",
            "type": "boolean",
            "default": false
        },
        {
            "title": "Query",
            "ui_width": 12,
            "name": "additional_query",
            "type": "string",
            "default": "",
            "hint": "Additional query parameters (JSON, parameter 'config' in request)"
        },
        {
            "title": "info line",
            "ui_width": 12,
            "name": "infoline_formatstring",
            "type": "string",
            "default": "{author} - {date} - {likes_and_comments}",
            "doc_link": true
        },
        {
            "title": "maximum image scale factor",
            "ui_width": 4,
            "name": "max_image_scale_factor",
            "type": "select",
            "options": [
                [1, "1x (do not scale up)"],
                [2, "2x (double size)"],
                [3, "3x (triple size"],
                [9999, "unlimited (scale all images)"]
            ],
            "default": 1
        },
        {
            "type": "section",
            "title": "Display Options"
        },
        {
            "title": "Background",
            "ui_width": 2,
            "name": "background",
            "type": "color",
            "default": [0,0,0,0]
        },
        {
            "title": "Font",
            "ui_width": 7,
            "name": "font",
            "type": "font",
            "default": "silkscreen.ttf"
        },
        {
            "title": "Display Duration",
            "ui_width": 3,
            "name": "duration",
            "type": "integer",
            "default": 10,
            "hint": "How long should each news entry be shown"
        }
    ]
}
