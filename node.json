
{
    "name": "Confluence",
    "permissions": {
        "network": "Needs to fetch confluence news feed"
    },
    "optional": [
        ".gitignore"
    ],
    "options": [{
        "title": "Background Color",
        "ui_width": 4,
        "name": "background",
        "type": "color",
        "default": [0,0,0,0]
    }, {
        "title": "Font",
        "ui_width": 4,
        "name": "font",
        "type": "font",
        "default": "silkscreen.ttf"
    }, {
        "title": "Feed",
        "ui_width": 4,
        "name": "feed",
        "type": "select",
        "options": [
            ["personal", "Personal News Feed"],
            ["corporate", "Corporate News Feed"]
        ],
        "default": "corporate"
    }, {
        "title": "URL",
        "ui_width": 12,
        "name": "base_url",
        "type": "string",
        "default": "https://demonstration.linchpin-intranet.com"
    }, {
        "title": "Username",
        "ui_width": 6,
        "name": "username",
        "type": "string",
        "default": "tschroeder"
    }, {
        "title": "Password",
        "ui_width": 6,
        "name": "password",
        "type": "string",
        "default": "tschroeder"
    }]
}
