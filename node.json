{
    "name": "Linchpin",
    "permissions": {
        "network": "Needs to fetch linchpin news feed"
    },
    "optional": [
        ".gitignore",
        "COPYRIGHT",
        "example.png",
        "README.md"
    ],
    "options": [
        {
            "type": "section",
            "title": "Your Linchpin Instance"
        },
        {
            "title": "URL (without trailing slash)",
            "ui_width": 12,
            "name": "base_url",
            "type": "string",
            "default": "https://demonstration.linchpin-intranet.com"
        },
        {
            "title": "Username",
            "ui_width": 4,
            "name": "username",
            "type": "string",
            "default": "tschroeder"
        },
        {
            "title": "Password",
            "ui_width": 4,
            "name": "password",
            "type": "string",
            "default": "tschroeder"
        },
        {
            "type": "section",
            "title": "Feed to display"
        },
        {
            "title": "Feed",
            "ui_width": 6,
            "name": "feed",
            "type": "select",
            "options": [
                ["personal", "Personal News Feed"],
                ["corporate", "Corporate News Feed"]
            ],
            "default": "corporate"
        },
        {
            "title": "Items",
            "ui_width": 6,
            "name": "item_count",
            "type": "integer",
            "default": 10,
            "hint": "Number of Items to display"
        },
        {
            "title": "Query",
            "ui_width": 12,
            "name": "additional_query",
            "type": "string",
            "default": "",
            "hint": "Additional query parameters (JSON, parameter 'config' iin request)"
        },
        {
            "title": "Show excerpt",
            "ui_width": 4,
            "name": "show_excerpt",
            "type": "boolean",
            "default": false
        },
        {
            "type": "section",
            "title": "Display Options"
        },
        {
            "title": "Background",
            "ui_width": 2,
            "name": "background",
            "type": "color",
            "default": [0,0,0,0]
        },
        {
            "title": "Font",
            "ui_width": 10,
            "name": "font",
            "type": "font",
            "default": "silkscreen.ttf"
        }
    ]
}
